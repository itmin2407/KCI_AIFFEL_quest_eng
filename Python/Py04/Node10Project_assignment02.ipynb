        "import datetime\n",
        "\n",
        "# 데코레이터를 클래스 밖에 정의\n",
        "def order_format(func):\n",
        "    def wrapper(self):\n",
        "        outline1 = '⟝' + '-' * 30 + '⟞'\n",
        "        outline2 = '|' + ' ' * 31 + '|'\n",
        "\n",
        "        # 상단 외곽\n",
        "        print(outline1)\n",
        "        for i in range(5):\n",
        "            print(outline2)\n",
        "\n",
        "        # 주문 내역 출력\n",
        "        func(self)\n",
        "\n",
        "        # 하단 외곽\n",
        "        for i in range(5):\n",
        "            print(outline2)\n",
        "        print(outline1)\n",
        "    return wrapper\n",
        "\n",
        "\n",
        "class Kiosk:\n",
        "    def __init__(self):\n",
        "        self.menu = ['americano', 'latte', 'mocha', 'yuza_tea', 'green_tea', 'choco_latte']\n",
        "        self.price = [2000, 3000, 3000, 2500, 2500, 3000]\n",
        "        self.order_menu = []\n",
        "        self.order_price = []\n",
        "        self.price_sum = 0\n",
        "\n",
        "    def pay(self):\n",
        "        print(f\"총 합계 금액은 {self.price_sum}원 입니다.\")\n",
        "        self.pay_method = 0\n",
        "        while self.pay_method != 1 and self.pay_method != 2:\n",
        "            self.pay_method = int(input('현금 결제는 1번,카드 결제는 2번을 입력해 주세요 :'))\n",
        "            if self.pay_method == 1:\n",
        "                print(\"직원을 호출하겠습니다.\")\n",
        "            elif self.pay_method == 2:\n",
        "                print(\"IC칩 방향에 맞게 카드를 꽂아주세요.\")\n",
        "            else:\n",
        "                print(\"다시 결제를 시도해 주세요.\")\n",
        "\n",
        "    @order_format\n",
        "    def table(self):\n",
        "        now = datetime.datetime.now()\n",
        "        print(f\"주문 일시: {now.strftime('%Y-%m-%d %H:%M:%S')}\")\n",
        "        print()\n",
        "\n",
        "        for i in range(len(self.order_menu)):\n",
        "            print(self.order_menu[i], ' : ', self.order_price[i])\n",
        "        print('합계 금액 :', self.price_sum)\n",
        "\n",
        "\n",
        "# 테스트\n",
        "kiosk = Kiosk()\n",
        "kiosk.order_menu = ['HOT americano', 'ICE latte']\n",
        "kiosk.order_price = [2000, 3000]\n",
        "kiosk.price_sum = 5000\n",
        "\n",
        "kiosk.table()"
      ]
    }
